<script>
/* ---------- Absurd Game Logic v2.0 ---------- */
const LS_KEY='mathgame_v1_2_6';
let state={player:null,score:0,leaderboard:{}};

function randInt(min,max){return Math.floor(Math.random()*(max-min+1))+min;}

function saveState(){localStorage.setItem(LS_KEY,JSON.stringify(state));}
function loadState(){try{state=Object.assign(state,JSON.parse(localStorage.getItem(LS_KEY)||'{}'));}catch(e){}}

const entryCard=document.getElementById('entryCard');
const playerNameInput=document.getElementById('playerName');
const enterBtn=document.getElementById('enterBtn');
const guestBtn=document.getElementById('guestBtn');
const menuCard=document.getElementById('menuCard');
const playerLabel=document.getElementById('playerLabel');
const startGameBtn=document.getElementById('startGameBtn');
const logoutBtn=document.getElementById('logoutBtn');
const gameArea=document.getElementById('gameArea');
const questionText=document.getElementById('questionText');
const answerInput=document.getElementById('answerInput');
const submitAnswerBtn=document.getElementById('submitAnswerBtn');
const resultMsg=document.getElementById('resultMsg');
const scoreUI=document.getElementById('scoreUI');

const absurdOps=['+','-','Ã—','Ã·','?','ðŸ’¥','ðŸ›¸'];

function nextAbsurdQuestion(){
  const op=absurdOps[randInt(0,absurdOps.length-1)];
  let qText='',answer=null;
  switch(op){
    case '+': case '-': case 'Ã—': case 'Ã·':
      const a=randInt(1,20),b=randInt(1,20);
      qText=`${a} ${op} ${b} = ?`;
      answer=eval(`${a}${op==='Ã—'?'*':op==='Ã·'?'/':op}${b}`);
      break;
    case '?':
      qText='Hangi sayÄ± gÃ¶rÃ¼nmez oldu? (0-10)';
      answer=randInt(0,10);
      break;
    case 'ðŸ’¥':
      qText='Patlayan sayÄ± nedir?';
      answer=randInt(50,100);
      break;
    case 'ðŸ›¸':
      qText='UzaylÄ± kaÃ§ puan verdi?';
      answer=randInt(1,50);
      break;
  }
  questionText.innerText=qText;
  answerInput.value='';
  submitAnswerBtn.onclick=()=>{
    const userAns=parseFloat(answerInput.value);
    if(userAns===answer){resultMsg.innerText='DoÄŸru! ðŸŽ‰';state.score+=Math.floor(answer*1.2);}
    else{resultMsg.innerText=`YanlÄ±ÅŸ ðŸ˜… DoÄŸru: ${answer}`;state.score+=randInt(0,5);}
    scoreUI.innerText=state.score;
    saveState();
    setTimeout(nextAbsurdQuestion,800);
  }
}

/* ---------- Session Flow ---------- */
enterBtn.addEventListener('click',()=>{
  const name=(playerNameInput.value||'').trim();if(!name){alert('AdÄ±nÄ± gir!');return;}
  startSession(name);
});
guestBtn.addEventListener('click',()=>startSession('Misafir-'+randInt(1000,9999)));

function startSession(name){
  state.player=name;
  saveState();
  playerLabel.innerText=name;
  entryCard.style.display='none';
  menuCard.style.display='block';
}

startGameBtn.addEventListener('click',()=>{
  menuCard.style.display='none';
  gameArea.style.display='block';
  scoreUI.innerText=state.score;
  nextAbsurdQuestion();
});

logoutBtn.addEventListener('click',()=>{
  if(!confirm('Oturumu kapatmak istiyor musun?'))return;
  state.player=null; state.score=0; saveState();
  entryCard.style.display='block'; menuCard.style.display='none'; gameArea.style.display='none';
});
</script>
